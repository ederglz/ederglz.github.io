.About
	font-size 1.2em
	margin 0 auto
	width 95%
	heigth 100%
	padding-bottom 10px
	&-info
		border-bottom 1px solid white
	&-name
		margin 0
		color white
	&-hidden
		display none
		text-align center
	&-soc
		display flex
		justify-content space-between
		list-style none
		margin 1em 0
		padding 0
		a
			text-decoration none
	&-me
		color white
		width 75%
	&-desc
		display flex
		flex-direction column
		align-items center
		margin-top 0.5em
		&>.icon-plus
			margin 0
			transition 0.5s
			&.is-active
				transform rotate(45deg)
			&:before
				font-size 36px
	&-title
		align-self flex-start
		font-weight bolder
	&-quote
		font-size 32px
		text-align center
		font-style italic
		color white
	&-avatar
		max-width 150px
		margin 10px
		img
			border-radius 50%
			width 100%