linkBorder(color = '')
	border-bottom 1px solid color
margin(n = 0)
	margin n auto
@import "nib"
@import "style.styl" 
@import "layout/styles.styl"
@import "header/styles.styl"
@import "main/styles.styl"
@import "footer/styles.styl"
blackA = #313131
blueA = #35A2ED
blueB = #286CBA
grayA = #888888
whiteA = #F7F7F7

html
	height 100%
a
	color blackA
	text-decoration none
	&:visited
		color blackA
body
	background-color whiteA
	font-family 'Inconsolata'
	font-size 18px
p
	margin()
	width 200px
img
	height 100%
	width 100%
.u-specialLink
	linkBorder(blackA)
	display inline-block
	margin-top 1em
	margin-right 1em
	padding-bottom 3px
	transition 0.5s all ease
	&--twitter
		&:hover
			linkBorder(blueA)
			color blueA
	&--github
		&:hover
			linkBorder(blueB)
			color blueB
	&--linkedin
		&:hover
			linkBorder(grayA)
			color grayA
	&:hover
		padding-bottom 0.5em
.u-textCenter
	text-align center
